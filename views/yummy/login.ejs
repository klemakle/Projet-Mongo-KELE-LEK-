<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title> Kele LEK</title>

    <!-- <link rel="shortcut icon" href="assets/images/fav.jpg"> -->
    <link rel="icon" href="img/core-img/favicon.ico">
    <link rel="stylesheet" href="assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="assets/css/fontawsom-all.min.css">
    <link rel="stylesheet" type="text/css" href="assets/css/style.css" />
</head>

<body class="h-100">
    <div class="container-fluid">
        <div class="container">

            <div class="row no-margin roji">
                <div class="col-sm-6">

                    <div class="btndiv">
                        <button onclick="userlogin()" class="btn btn-impersonnel">
                             <i class="fas fa-lock-open"></i> Click to Login</button>
                    </div>

                </div>

            </div>
        </div>

        <div id="login" class="modal" tabindex="-1" role="dialog">
            <div class="modal-dialog tem-doc" role="document">
                <div class="modal-content temp-model">
                    <div class="modal-header">
                        <h5 class="modal-title">Se connecter</h5> <br>
                        <p>Veuillez remplir les champs ci-dessous pour vous connecter </p>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                    </div>
                    <form method="POST" action="">
                        <div class="modal-body">
                            <div class="row form-ro">
                                <input placeholder="Nom d'utilisateur..." class="form-control" type="text" name="username">
                            </div>
                            <div class="row form-ro">
                                <input placeholder="Mot de passe..." class="form-control" type="password" name="password">
                            </div>
                            <div class="row form-ro">
                                <button type="submit" class="btn btn-impersonnel">Log In</button>
                            </div>
                            <div class="row form-ro">
                                <a href="sign" onclick="signup()" class="personnel"> Pas encore de compte ?  S'inscrire</a>
                            </div>
                        </div>
                    </form>
                    <div class="" id="footer-login">

                        <% if(typeof errors != 'undefined'){ %>
                            <% errors.forEach(function(error) { %>
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <%= error.message %>
                                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                              </button>
                                </div>
                                <% }); %>
                                    <% } %>

                    </div>
                </div>
            </div>
        </div>



    </div>
</body>

<script src="assets/js/jquery-3.2.1.min.js"></script>
<script src="assets/js/popper.min.js"></script>
<script src="assets/js/bootstrap.min.js"></script>
<script src="assets/js/script.js"></script>

<script>
    $(document).ready(function() {
        userlogin();
    })

    function userlogin() {
        $("#signup").modal('hide');
        $("#login").modal('show');
    }

    function signup() {
        $("#login").modal('hide');
        $("#signup").modal('show');
    }
</script>

</html>
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="description" content="">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- The above 4 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <!-- Title -->
    <title>Kele LEK</title>

    <!-- Favicon -->
    <link rel="icon" href="/img/core-img/favicon.ico">

    <!-- Core Stylesheet -->
    <link href="/style.css" rel="stylesheet">


    <!-- Responsive CSS -->
    <link href="/css/responsive/responsive.css" rel="stylesheet">
    <link href="/css/test.css" rel="stylesheet">

    <script text="text/javascript" src="/js/test.js" defer></script>
</head>

<body>


    <!-- Background Pattern Swither -->
    <div id="pattern-switcher">
        Poster ?
    </div>
    <div id="patter-close">

    </div>


    <!-- ****** Top Header Area Start ****** -->
    <div class="top_header_area">
        <div class="container">
            <div class="row">
                <div class="col-5 col-sm-6">
                    <!--  Top Social bar start -->
                    <div class="top_social_bar">

                        <h4>
                            <%= user.prenom %>
                                <%= user.nom %>
                        </h4>
                    </div>
                </div>
                <!--  Login Register Area -->
                <div class="col-7 col-sm-6">
                    <div class="signup-search-area d-flex align-items-center justify-content-end">
                        <div class="login_register_area d-flex">
                            <div class="register">
                                <a href="/logout">Se déconnecter</a>
                            </div>
                        </div>
                        <!-- Search Button Area -->
                        <div class="search_button">
                            <a class="searchBtn" href="#"><i class="fa fa-search" aria-hidden="true"></i></a>
                        </div>
                        <!-- Search Form -->
                        <div class="search-hidden-form" style="width: 200px;">
                            <form action="#" method="get">
                                <input type="search" name="search" id="search-anything" placeholder="Search Anything...">
                                <input type="submit" value="" class="d-none">
                                <span class="searchBtn"><i class="fa fa-times" aria-hidden="true"></i></span>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ****** Top Header Area End ****** -->
    <!-- Inscription Form -->
    <div class="insert-data-form enlever" id="swup">
        <div id="patter-close" class="bouton-fermer">
            <button style="background-color: #ffffff18;">
             <h2 id="bouton-fermer" >X</h2> 
        </button>
        </div>

        <form method="POST" action="" enctype="multipart/form-data">
            <div class="comment-form">

                <h3 class="mb-30" style="color: #fc6c40e6;">Poster un plat</h3>

                <div class="form-group test">
                    <input class="form-control areatest" type="text" name="titre" id="id-titre" required placeholder="Titre">
                </div>

                <div class="form-group test">
                    <textarea class="form-control areatest" name="description" id="id-descritption" required placeholder="Description"></textarea>
                </div>

                <div class="test" style="visibility:hidden; width: 1%; height: 1%;">
                    <input class="form-control areatest" type="text" name="auteur" id="id-auteur" value="<%= user.username %>">
                </div>

                <div class="form-group test">
                    <select class="form-control areatest" name="categorie" type="checkbox">
                        <option value="Dessert">Dessert</option>
                        <option value="Dejeuner">Dejeuner</option>
                        <option value="Cafe">Cafe</option>
                        <option value="Viande">Viande</option>
                        <option value="Patisserie">Patisserie</option>
                        <option value="Vegan">Vegan</option>
                        <option value="Poisson">Poisson</option>
                    </select>

                </div>

                <div class="form-group test">
                    <input class="form-control areatest" type="file" name="image_pub" id="id-image_pub" required placeholder="Photo">
                </div>



                <div class="form-group test">
                    <textarea class="form-control areatest" name="ingredients" id="id-ingredients" cols="35" rows="10" placeholder="Ingrédients" aria-describedby="emailHelp"></textarea>
                    <small id="emailHelp" class="form-text text-muted">Séparez les ingrédients par des points virgules</small>
                </div>

                <div>
                    <button type="submit" class="btn contact-btn btn-sm"> Valider </button>
                </div>
            </div>

        </form>


    </div>

    <!-- ****** Header Area Start ****** -->
    <header class="header_area">
        <div class="container">
            <div class="row">
                <!-- Logo Area Start -->
                <div class="col-12">
                    <div class="logo_area text-center">
                        <a href="/post" class="yummy-logo">Kele LEK</a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">
                    <nav class="navbar navbar-expand-lg">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#yummyfood-nav" aria-controls="yummyfood-nav" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars" aria-hidden="true"></i> Menu</button>
                        <!-- Menu Area Start -->
                        <div class="collapse navbar-collapse justify-content-center" id="yummyfood-nav">
                            <ul class="navbar-nav" id="yummy-nav">
                                <li class="nav-item">
                                    <a class="nav-link" href="/post">Home <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="yummyDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Pages</a>
                                    <div class="dropdown-menu" aria-labelledby="yummyDropdown">
                                        <a class="dropdown-item" href="/post">Home</a>
                                        <a class="dropdown-item" href="/post/archive">Archive</a>
                                        <a class="dropdown-item" href="/compte">Contact</a>
                                    </div>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link" href="/post/categ">Categories</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="/post/archive">Archive</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <!-- ****** Header Area End ****** -->

    <!-- ****** Breadcumb Area Start ****** -->
    <div class="breadcumb-area" style="background-image: url(/img/bg-img/breadcumb.jpg);">
        <div class="container h-100">
            <div class="row h-100 align-items-center">
                <div class="col-12">
                    <div class="bradcumb-title text-center">
                        <h2>Mon compte</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="breadcumb-nav">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="#"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
                            <li class="breadcrumb-item active" aria-current="page">
                                <%= user.username %>
                            </li>
                            </li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <!-- ****** Breadcumb Area End ****** -->

    <!-- ****** Contatc Area Start ****** -->
    <div class="contact-area section_padding_80">
        <div class="container">


            <!-- Contact Info Area Start -->

            <!-- Contact Form  -->
            <div class="contact-form-area">
                <div class="row">
                    <div class="col-12 col-md-5">
                        <div class="contact-form-sidebar item wow fadeInUpBig" data-wow-delay="0.3s">
                            <img src="/<%= user.photo_profile %>" alt="" style="width: 100%; height: 600px;">
                        </div>
                    </div>
                    <div class="col-12 col-md-7 item">
                        <div class="contact-form wow fadeInUpBig" data-wow-delay="0.6s">
                            <h2 class="contact-form-title mb-30">
                                <%= user.username %>
                            </h2>
                            <div class="form-group">
                                <input type="text" class="form-control" name="prenom" id="contact-name" placeholder="<%= user.prenom %>" disabled>
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control" name="nom" id="contact-email" placeholder="<%= user.nom %>" disabled>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" name="email" id="contact-website" placeholder="<%= user.email %>" disabled>
                            </div>
                            <div class="form-group">
                                <% if (pubPerso.length > 0 ){ %>
                                    <button class="btn contact-btn">Mes Posts</button>
                                    <% } %>
                                        <ul class="mb-30">

                                            <% pubPerso.forEach ( pub => { %>
                                                <li>
                                                    <div class="post-author">
                                                        <a href="/post/single/<%= pub.id %>">
                                                            <%= pub.titre %>
                                                        </a>

                                                        <a href="/post/update/<%= pub.id %>" id="modifier"> Modifier</a>
                                                    </div>

                                                </li>
                                                <% }); %>
                                        </ul>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- ****** Contact Area End ****** -->
    <h2 class="ml-5">Mes publications </h2><br>
    <% if (pubPerso.length == 0 ){ %>
        <h6 class="ml-5">Aucun Post</h6>
        <% } %>
            <!-- ****** Instagram Area Start ****** -->
            <div class="instargram_area owl-carousel section_padding_100_0 clearfix" id="portfolio">


                <% pubPerso.forEach( pub => { %>
                    <!-- Instagram Item -->
                    <div class="instagram_gallery_item">
                        <!-- Instagram Thumb -->
                        <img src="/<%= pub.image_pub %>" alt="" style="height: 300px; width: 100%;">
                        <!-- Hover -->
                        <div class="hover_overlay">
                            <div class="yummy-table">
                                <div class="yummy-table-cell">
                                    <div class="follow-me text-center">
                                        <a href="/post/single/<%= pub.id %> "><i class="fa fa-comment-o" aria-hidden="true"></i>
                                            <%= pub.comments.length %>
                                        </a>
                                        <a href="/post/single/<%= pub.id %> "><i class="fa fa-heart-o" aria-hidden="true"></i> <%= pub.likes %></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <% }); %>



            </div>
            <!-- ****** Our Creative Portfolio Area End ****** -->



            <!-- ****** Footer Menu Area Start ****** -->
            <footer class="footer_area">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="footer-content">
                                <!-- Logo Area Start -->
                                <div class="footer-logo-area text-center">
                                    <a href="/post" class="yummy-logo">Kele LEK</a>
                                </div>
                                <!-- Menu Area Start -->
                                <nav class="navbar navbar-expand-lg">
                                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#yummyfood-footer-nav" aria-controls="yummyfood-footer-nav" aria-expanded="false" aria-label="Toggle navigation"><i class="fa fa-bars" aria-hidden="true"></i> Menu</button>
                                    <!-- Menu Area Start -->
                                    <div class="collapse navbar-collapse justify-content-center" id="yummyfood-footer-nav">
                                        <ul class="navbar-nav">
                                            <li class="nav-item active">
                                                <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#">Features</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#">Categories</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/post/archive">Archive</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="#">About</a>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" href="/compte">Contact</a>
                                            </li>
                                        </ul>
                                    </div>
                                </nav>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <!-- Copywrite Text -->
                            <div class="copy_right_text text-center">
                                <p>Copyright @2018 All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
            <!-- ****** Footer Menu Area End ****** -->

            <!-- Jquery-2.2.4 js -->
            <script src="/js/jquery/jquery-2.2.4.min.js"></script>
            <!-- Popper js -->
            <script src="/js/bootstrap/popper.min.js"></script>
            <!-- Bootstrap-4 js -->
            <script src="/js/bootstrap/bootstrap.min.js"></script>
            <!-- All Plugins JS -->
            <script src="/js/others/plugins.js"></script>
            <!-- Google Maps -->
            <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyAwuyLRa1uKNtbgx6xAJVmWy-zADgegA2s"></script>
            <script src="/js/google-map/map-active.js"></script>
            <!-- Active JS -->
            <script src="/js/active.js"></script>
</body>